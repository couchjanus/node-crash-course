extends ../layouts/app

block content
  .col-sm-9.col-md-7.col-lg-5.mx-auto
    .card.card-signin.my-5
      .card-body
        h3.card-title.text-center Sign In
        form(class='form-signin', action='/login', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-label-group
            input(type="email" id="inputEmail"  name='email' class="form-control" placeholder="Email address" required autofocus)
            label(for="inputEmail") Email address

          .form-label-group
            input(type="password" id="inputPassword" name='password' class="form-control" placeholder="Password" required)
            label(for="inputPassword") Password

          .custom-control.custom-checkbox.mb-3
            input(type="checkbox" class="custom-control-input" id="customCheck1")
            label(class="custom-control-label" for="customCheck1") Remember password
          button(class="btn btn-lg btn-primary btn-block text-uppercase" id='submit' type="submit")
            i.far.fa-user
            | Sign in
          hr.my-4
          button(class="btn btn-lg btn-google btn-block text-uppercase" type="submit")
            i.fab.fa-google.mr-2
            | Sign in with Google
          button(class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit")
            i.fab.fa-facebook-f.mr-2
            | Sign in with Facebook
          hr.my-4
          a(href='/forgot') Forgot your password?