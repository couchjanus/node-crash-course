extends ../../layouts/admin

block content

  section.section-padding
      hr.bottom-line

      if errors
        ul
         for error in errors
           li!= error.msg

      .card
        .card-block
          .card-header
            i.fa.fa-table 
            |  #{title}
            a(href='/admin/users' class='m-auto float-right btn btn-info') Go back
          .card-body
            .table-responsive
              table#dataTable.table.table-bordered(width='100%', cellspacing='0')

                form(method='POST' action='')
                  tbody
                    tr.form-group
                      td
                        label(for='username') User Name:
                      td 
                        input#username.form-control(type='text', placeholder='Enter Username.' name='username' required='true' value=(undefined===user ? '' : user.username))
                      td
                        label(for='email') Email:
                      td 
                        input#email.form-control(type='email', placeholder='Enter email.' name='email' required='true' value=(undefined===user ? '' : user.email))
                    
                    tr.form-group
                      td
                         button.btn.btn-primary(type='submit') Submit
