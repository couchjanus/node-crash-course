extends ../../layouts/admin

block content
  .card.mb-3
    .card-header
      i.fa.fa-table
      |  #{title}
      a(href='/admin/user/create' class='float-right btn btn-success') Create new
 
      .card-body
        .table-responsive
          table#dataTable.table.table-bordered(width='100%', cellspacing='0')
            thead
              tr
                th #
                th Name
                th Email
                th(colspan=2) Actions
            tfoot
              tr
                th #
                th Name
                th Email
                th(colspan=2) Actions

            if users

              tbody
                - var i = 0
                
                each user in users
                  - i++
                  tr
                    td= i
                    td= user.username
                    td= user.email
                    td
                      a(href='user/'+user._id+'/update' class="btn btn-warning") Edit
                    td
                      form(method='POST' action='/admin/user/delete')
                        input#id.form-control(type='hidden', name='id', value=user._id)
                        button.btn.btn-danger(type='submit') Delete
      .card-footer.small.text-muted
        - var now = new Date(Date.now())
        | Updated #{now}
